<div class='page'>
  <div class='page_content'>
	<header class="page_block">
		<div class='header'>
			<div>
				{{>logo}}
			</div>

			<div class='header_nav'>
				<div class="header_nav_right">
					{{>nav list=header}}
				</div>				
			</div>
		</div>
	</header>
    
	<section class="page_block">
		<div class="hero">
			{{#with hero}}
				{{>hero title=title text=text}}
				<a href="{{button.url}}" class="button">
					{{button.text}}
				</a>
			{{/with}}			
		</div>		
	</section>

	<section class="page_block">
		<div class="flex-container">
			{{#each preview}}				
				{{>cardPreview class="flex-item" data=this}}
			{{/each}}			
		</div>
	</section>

	<main class="page_block">
		<div class="main row g-0">
			<div class="col-12">
				<div class="list_header">
					<div>
						<h2 class="list_title">List of posts</h2>
					</div>
					<div class="buttons">
						{{#each categories}}
							<button class="category_button posts{{id}}">{{text}}</button>				
						{{/each}}
					</div>
				</div>
			</div>

			<div class="list col-7">				
				{{#each news}}
					{{>post data=this}}
				{{/each}}				
			</div>

			<aside class="list_aside col-5">
				<div class="aside_about">
					<h5 class="aside_title">About</h5>
					<p class="aside_text">{{about}}</p>
				</div>
				<div class="aside_block">
					{{>linkList title='Archive' data=archive}}
				</div>
				<div class="aside_block">
					{{>linkList title='Social' data=social}}

				</div>
				
			</aside>
		</div>
		
		
	</main>

    <footer class="page_block">
		{{!-- {{>divider}} --}}
		<div class="footer">
			<div>
				{{>logo}}
				<span class="footer_copyright">Copyright 2023-2024</span>				
			</div>
			{{#each footer}}
				<div>
					<span class="footer_title">
						{{title}}
					</span>					
					{{>nav list=links isVertical=true}}
				</div>
			{{/each}}
			
		</div>
	</footer>

  </div>
</div>