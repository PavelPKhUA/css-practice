
<header class='header'>
	<a href="#test">
		{{>logo}}
	</a>

	<div class='header_nav'>
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>				
	</div>
</header>

<div class="modal">
	<div>
		{{hero.text}}
		{{hero.text}}
		<img src="{{hero.photo}}" alt="hero image" class="modal_image">
		<div class="modal_text">
			{{hero.text}}
			{{hero.text}}
		</div>			
	</div>
	
	<div class="modal_cross">
		&#10060; 
	</div>
	
</div>

<input type="text" class="input">

<div class="hero">
	{{#with hero}}
		<div class="hero_content">
			<h1 class="hero_title">
				{{title}}
			</h1>
			<p class="hero_text">
				{{text}}
			</p>
		</div>
		<div class="hero_slider">
			<div class="hero_slider_icon hero_slider_left">
				&#9664;
			</div>
			<img src="{{photo}}" alt="hero image" class="hero_photo">
			<div class="hero_slider_icon hero_slider_right">
				&#9654;
			</div>
		</div>		
	{{/with}}
	
</div>

<main class="blog">
	{{#each blog}}
		{{>cardBlog data=this}}
	{{/each}}
</main>

<div class="form">
	{{#with form}}
		<div class="form_content">
			<h3 class="form_title">
				{{title}}
			</h3>
			<p class="form_text">
				{{info}}
			</p>
		</div>
		<div class="form_action">
			<a href="{{href}}" class="form_button">
				{{button}}
			</a>
		</div>
		
	{{/with}}
</div>

<footer class="footer" id="test">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>				
	</div>
	{{#each footer}}
		<div>
			<span class="footer_title">
				{{title}}
			</span>					
			{{>nav list=links isVertical=true}}
		</div>
	{{/each}}
	
</footer>
