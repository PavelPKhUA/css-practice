
<header class='header'>
	<div>
		{{>logo}}
	</div>

	<div class='header_nav'>
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>				
	</div>
</header>

<div class="hero">
	{{#with hero}}
		<div class="hero_content">
			<h1 class="hero_title">
				{{title}}
			</h1>
			<p class="hero_text">
				{{text}}
			</p>
		</div>
		<img src="{{photo}}" alt="hero image" class="hero_photo">
	{{/with}}
	
</div>

<main class="blog">
	{{#each blog}}
		{{>cardBlog data=this}}
	{{/each}}
</main>

<div class="form">
	{{#with form}}
		<div class="form_content">
			<h3 class="form_title">
				{{title}}
			</h3>
			<p class="form_text">
				{{info}}
			</p>
		</div>
		<div class="form_action">
			<a href="{{href}}" class="form_button">
				{{button}}
			</a>
		</div>
		
	{{/with}}
</div>

<footer class="footer">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>				
	</div>
	{{#each footer}}
		<div>
			<span class="footer_title">
				{{title}}
			</span>					
			{{>nav list=links isVertical=true}}
		</div>
	{{/each}}
	
</footer>
