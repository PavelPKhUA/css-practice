
<header class='header'>
	<div>
		{{>logo}}
	</div>

	<div class='header_nav'>
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>				
	</div>
</header>

<main class="hero">
	{{#with main}}
		<img src="{{image}}" alt="" class="hero_image">
		<div class="hero_content">
			<h1 class="hero_title">
				{{heading}}
			</h1>
			<p class="hero_text">
				{{descriotion}}
			</p>
			<div>
				<a href="{{url}}" class="card_button">{{button}}</a>
			</div>
		</div>	
	{{/with}}	
</main>

<section class="feature">
	{{#each featured}}
		<div class="card">
			<div
				style='background-image: url({{photo}});'
				class='card_image'
				> 
			</div>
			<h2 class="card_title">
				{{heading}}
			</h2>
			<p class="card_text">
				{{info}}
			</p>
			<a href="{{linkUrl}}" class="card_link">{{linkText}}</a>
		</div>	
	{{/each}}
</section>

<section class="form">
	{{#each actions}}
		<div class="form_action">
			<h3 class="form_title">
				{{heading}}
			</h3>
			<div class="">
			<a href="{{url}}" class="form_button">
				{{text}}
			</a>
		</div>
		</div>
	{{/each}}
</section>

<footer class="footer">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>				
	</div>
	{{#each footer}}
		<div>
			<span class="footer_title">
				{{title}}
			</span>					
			{{>nav list=links isVertical=true}}
		</div>
	{{/each}}
	
</footer>
