
<header class='header'>
	<a href="#test">
		{{>logo}}
	</a>

	<div class='header_nav'>
		<div class="header_nav_right">
			{{>nav list=header}}
		</div>				
	</div>
</header>

<main class="main">
	<div class="messages">
		{{#with messages}}
			<h1 class="messages_title">
				{{title}}
			</h1>

			{{#each list}}
				<div class="msg">
					<strong class="msg_name">
						{{name}}
					</strong>
					<p class="msg_text">
						{{message}}
					</p>
					<span class="msg_day">
						{{day}}
					</span>
				</div>
			{{/each}}

			<a href="#" class="messages_link">
				All messages
			</a>
		{{/with}}
	</div>
	<form class="form">
		{{#with form}}
			<h2 class="form_title">{{title}}</h2>
			<div class="form_input_list">
				{{#each inputs}}
					<input type="{{type}}" placeholder="{{placeholder}}" name="{{name}}" id="form-input-{{id}}" class="form_input">
				{{/each}}
			</div>
			<div class="form_checkbox">
				{{#with checkbox}}
					<input type="checkbox" name="{{name}}" id="{{name}}">
					<div></div>
					<label for="{{name}}">{{label}}</label>
				{{/with}}				
			</div>
			<button type="submit" class="form_button">
				{{button}}
			</button>
			<p class="form_info">
				{{info}}
			</p>
		{{/with}}
	</form>
</main>

<div class="advantages">
	{{#each advantages}}
		<div class="adv_item">
			<strong class="adv_title">
				{{title}}
			</strong>
			<p class="adv_text">
				{{text}}
			</p>
		</div>
	{{/each}}
</div>

<footer class="footer" id="test">
	<div>
		{{>logo}}
		<span class="footer_copyright">Copyright 2023-2024</span>				
	</div>
	{{#each footer}}
		<div>
			<span class="footer_title">
				{{title}}
			</span>					
			{{>nav list=links isVertical=true}}
		</div>
	{{/each}}
	
</footer>
